{{!-- conditional to check if SelectableCard is apart of a CSS Grid, if yes return grid item class --}}
{{#if gridContainer}}
  <div class={{gridContainer}}>
    <div class={{gridItem}}> 
      <p class="title-number">{{format-number total}}</p>
      <p class="title is-5">{{cardTitleComputed}}</p>
      <p class="has-text-grey is-size-8">{{subText}}</p>
    </div>
    {{yield}}
  </div>
{{else}}
  <div class={{gridItem}}> 
    <p class="title-number">{{format-number total}}</p>
    <p class="title is-5">{{cardTitleComputed}}</p>
    <p class="has-text-grey is-size-8">{{subText}}</p>
  </div>
  {{yield}}
{{/if}}
