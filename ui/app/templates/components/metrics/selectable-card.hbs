{{#if containerGridItem}}
  <div class={{containerGridItem}}>
    <div class={{gridItem}}> 
      <p class="title-number">{{format-number total}}</p>
      {{#if (not-eq counters.totalTokens 1)}}
      <p class="title is-5">{{cardType}}</p>
      {{else}}
      <p class="title is-5">{{cardType}}</p>
      {{/if}}
      <p class="has-text-grey is-size-8">{{subText}}</p>
    </div>
    {{yield}}
  </div>
{{else}}
  <div class={{gridItem}}> 
    <p class="title-number">{{format-number total}}</p>
    {{#if (not-eq counters.totalTokens 1)}}
    <p class="title is-5">{{cardType}}</p>
    {{else}}
    <p class="title is-5">{{cardType}}</p>
    {{/if}}
    <p class="has-text-grey is-size-8">{{subText}}</p>
  </div>
  {{yield}}
{{/if}}
